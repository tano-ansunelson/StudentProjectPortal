@model StudentProjectPortal.ViewModels.StudentRegisterViewModel
@{
    ViewBag.Title = "Student Registration";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <span class="fs-3 me-2">🎓</span> AcademicPortal
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- PAGE -->
<div class="container-fluid min-vh-100 d-flex pt-5 p-0">
    <div class="row flex-fill g-0">

        <!-- LEFT FORM -->
        <div class="col-md-6 d-flex align-items-center justify-content-center bg-dark p-4">
            <div class="card shadow-lg rounded-4 p-4 w-100"
                 style="max-width: 420px; background:#1e1f24; border:none;">

                <div class="text-center mb-4 text-white">
                    <h2 class="fw-bold">Student Registration</h2>
                    <p class="text-secondary">Create your student account</p>
                </div>

                <form asp-controller="Students" asp-action="Register" method="post">

                    <!-- Full Name -->
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-white">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="FullName" class="form-control bg-dark text-white border-secondary"
                                   placeholder="Full name" />


                       </div>
                           <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">   
                            <label class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-white">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control bg-dark text-white border-secondary"
                                   placeholder="student@st.knust.edu.gh" />
                        </div> 
                            <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        
                            <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-white">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" id="studentPassword"
                                   type="password"
                                   class="form-control bg-dark text-white border-secondary"
                                   placeholder="Password" />
                            <span class="input-group-text bg-dark border-secondary text-white"
                                  onclick="togglePassword('studentPassword','studentEye')"
                                  style="cursor:pointer;">
                                <i class="bi bi-eye" id="studentEye"></i>
                            </span>
                        </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Class -->
                    <div class="mb-3">
                        <label class="form-label">Select Class</label>
                        <div class="input-group">
                        <select asp-for="ClassId" class="form-select bg-dark text-white border-secondary">
                            <option value="">-- Select Program --</option>
                            @foreach (var c in Model.classes)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </select>
                        </div>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div>

                    <!-- Level -->
                    <div class="mb-3">
                        <label class="form-label">Level</label>
                        <div class="input-group">
                            <select asp-for="Level" class="form-select bg-dark text-white border-secondary">
                                <option value="100">Level 100</option>
                                <option value="200">Level 200</option>
                                <option value="300">Level 300</option>
                                <option value="400">Level 400</option>
                            </select>
                        </div>
                        <span asp-validation-for="Level" class="text-danger"></span>

                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-success fw-semibold">
                            Register
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <span class="text-white-50">Already registered?</span>
                    <a asp-controller="Account" asp-action="Login"
                       class="text-success fw-semibold text-decoration-none">
                        Login
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT IMAGE -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/images/student.jpg" class="w-100 h-100"
                 style="object-fit:cover; filter:brightness(85%)">
        </div>

    </div>
</div>

<script>
    function togglePassword(inputId, iconId) {
        const input = document.getElementById(inputId);
        const icon = document.getElementById(iconId);

        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
        } else {
            input.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
        }
    }
</script>
