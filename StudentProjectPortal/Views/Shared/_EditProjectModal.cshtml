<div class="modal fade" id="editProjectModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-dark">Edit Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-controller="Projects" asp-action="Edit" method="post" enctype="multipart/form-data">

                <div class="modal-body">

                    <!-- PROJECT ID (HIDDEN) -->
                    <input type="hidden" name="Id" id="editProjectId" />

                    <!-- TITLE -->
                    <div class="mb-3">
                        <label class="form-label text-dark">Project Title</label>
                        <input type="text" name="Title" id="editTitle" class="form-control" required />
                    </div>

                    <!-- DESCRIPTION -->
                    <div class="mb-3">
                        <label class="form-label text-dark">Description</label>
                        <textarea name="Description" id="editDescription" class="form-control" rows="4" required></textarea>
                    </div>

                    <!-- LEVEL -->
                    <div class="mb-3">
                        <label class="form-label text-dark">Target Level</label>
                        <select name="Level" id="editLevel" class="form-select" required>
                            <option value="">Select Level</option>
                            <option value="100">Level 100</option>
                            <option value="200">Level 200</option>
                            <option value="300">Level 300</option>
                            <option value="400">Level 400</option>
                        </select>
                    </div>

                    <!-- DEADLINE -->
                    <div class="mb-3">
                        <label class="form-label text-dark">Deadline</label>
                        <input type="date" name="Deadline" id="editDeadline" class="form-control" required />
                    </div>

                    <!-- FILE UPLOAD -->
                    <div class="mb-3">
                        <label class="form-label text-dark">Replace File (Optional)</label>
                        <input type="file" name="ProjectFile" class="form-control" />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Update Project
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

