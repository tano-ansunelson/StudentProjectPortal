﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Submission Portal</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentSubmissionPortal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .form-control::placeholder {
            color: #9ca3af !important; /* light gray */
            opacity: 1;
        }

        .form-label {
            color: #adb5bd;
            font-size: 0.9rem;
        }



        /* Navbar initial state */
        .navbar-custom {
            background-color: #0C2B4E; /* Primary green color */
            transition: background-color 0.4s ease, box-shadow 0.4s ease, color 0.4s ease;
        }

        /* Transparent navbar on scroll */
        .navbar-transparent {
            background-color: #0C2B4E !important; /* Slightly transparent green */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-link,
        .navbar-brand {
            color: #fff !important;
        }

        .btn-login,
        .btn-register {
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-login {
            background-color: #fff;
            color: #388E3B;
            border: 1px solid #fff;
        }

            .btn-login:hover {
                background-color: #f1f1f1;
                color: #2e7d32;
            }

        .btn-register {
            background-color: transparent;
            color: #fff;
            border: 1px solid #fff;
        }

            .btn-register:hover {
                background-color: #fff;
                color: #388E3B;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", User.IsInRole("Student")?"Students":User.IsInRole("Supervisor")?"Supervisor":"Home" )">
                    <span class="fs-3 me-2">🎓</span>
                    AcademicPortal
                </a>
                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

             

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center link-opacity-100-hover">
                       
                        <!-- if user not logged in -->
                        @if (!User.Identity.IsAuthenticated)
                        {
                          

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="About">About us</a>
                            </li>
                            <li class="nav-item ms-lg-3">
                                <a class="btn btn-outline-light d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                </a>
                            </li>
                        }
                        @* if user is logged in*@
                        else
                        {
                            @*Student navbar*@
                            @if(User.IsInRole("Student"))
                            {
                               
                                <li class="nav-link">
                                <button class="btn btn-outline-light d-flex align-items-center"
                                        data-bs-toggle="modal"
                                        data-bs-target="#logoutModal">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>

                                </li>
                                <li class="nav-item me-2">

                                    <button class="btn btn-outline-light d-md-none" id="toggleSidebar">
                                     ☰
                                    </button>

                                </li>

                               
                            }
                            @*Supervisor navbar*@
                            @if (User.IsInRole("Supervisor"))
                            {
                               

                               <!-- profile button-->
                               <li class="nav-item me-2">

                                   <a class="btn btn-outline-info d-flex align-items-center"
                                   asp-controller="Supervisor"
                                   asp-action="Profile">
                                     <i class="bi bi-person-circle me-2"></i>  
                                     Profile
                                   </a>
                               </li>
                               <li class="nav-item me-2">

                                      <button class="btn btn-outline-light d-md-none" id="toggleSidebar">
                                        ☰
                                    </button>
                               </li>

                              <li class="nav-item">
                                <button class="btn btn-outline-light d-flex align-items-center"
                                        data-bs-toggle="modal"
                                        data-bs-target="#logoutModal">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>

                               </li>


                            }

                        }

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="page-wrapper">
    <!-- Spacer to prevent content hiding behind navbar -->
    <div style="height: 80px;"></div>
       <partial name="_LogoutModal"/>

    <!-- Main Content -->
    <main class="container my-4   ">
        @RenderBody()
    </main>
        <partial name="_Footer" />
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
               document.getElementById("toggleSidebar")?.addEventListener("click", function () {
            document.getElementById("sidebar")?.classList.toggle("show");
        });
         const navbar = document.getElementById('mainNavbar');

        // Add scroll effect
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('navbar-transparent');
            } else {
                navbar.classList.remove('navbar-transparent');
            }
        });
    </script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>