@model List<StudentProjectPortal.Models.Submission>

@{
    ViewBag.Title = "Submissions History";
  
}

<div class="py-5 mt-4" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); min-height: 100vh;">
    <div class="container-fluid px-4 px-lg-5">
        <!-- PAGE HEADER -->
        <div class="mb-5">
            <div class="d-flex align-items-center mb-3">
                <div class="me-3">
                    <div class="rounded-circle d-flex align-items-center justify-content-center shadow"
                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <i class="bi bi-clock-history text-white fs-3"></i>
                    </div>
                </div>
                <div>
                    <h2 class="fw-bold mb-1 text-white">My Submissions History</h2>
                    <p class="text-white-50 mb-0">View all project submissions and their grading progress</p>
                </div>
            </div>
            <div class="border-bottom border-secondary opacity-25"></div>
        </div>

        <!-- SUBMISSIONS TABLE -->
        <div class="card border-0 rounded-4 shadow-lg"
             style="background: linear-gradient(135deg, #1e1e30 0%, #2a2a40 100%);">

            <!-- Table Header -->
            <div class="card-header border-0 py-4 px-4"
                 style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
                        border-radius: 1rem 1rem 0 0;">
                <div class="row text-white fw-bold align-items-center">
                    <div class="col-md-4">
                        <i class="bi bi-folder2-open me-2"></i>Project Title
                    </div>
                    <div class="col-md-2 text-center">
                        <i class="bi bi-flag-fill me-2"></i>Status
                    </div>
                    <div class="col-md-2 text-center">
                        <i class="bi bi-calendar-check me-2"></i>Date Submitted
                    </div>
                    <div class="col-md-2 text-center">
                        <i class="bi bi-star-fill me-2"></i>Grade
                    </div>
                    <div class="col-md-2 text-center">
                        <i class="bi bi-file-earmark-arrow-down me-2"></i>File
                    </div>
                </div>
            </div>

            <!-- Table Body -->
            <div class="card-body p-0">
                @foreach (var sub in Model )
                {
                    <div class="row align-items-center py-4 px-4 border-bottom border-secondary border-opacity-25">
                        <!-- Project Title -->
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 45px; height: 45px; background: rgba(102, 126, 234, 0.15);">
                                        <i class="bi bi-file-earmark-text-fill" style="color: #667eea; font-size: 1.2rem;"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="fw-bold text-white mb-0">@sub.Project.Title</h6>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-md-2 text-center">
                           
                            {
                                <span class="badge px-4 py-2 fw-semibold rounded-pill"
                                      style="background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%); color: white;">
                                    <i class="bi bi-check-circle-fill me-2"></i>Submitted
                                </span>
                         
                        </div>

                        <!-- Date Submitted -->
                        <div class="col-md-2 text-center">
                            <div class="d-flex flex-column">
                               <div class="text-white-50">@sub.SubmissionDate.ToString("MMM,dd,yyy")</div>
                               <small class="text-white-50"> @sub.SubmissionDate.ToString("dddd")</small>
                            </div>
                        </div>

                        <!-- Grade -->
                        <div class="col-md-2 text-center">
                            @if (string.IsNullOrEmpty(sub.Grade))
                            {
                                <span class="text-warning fw-semibold fst-italic">
                                    <i class="bi bi-hourglass-split me-2"></i>Pending
                                </span>
                            }
                            else
                            {
                                <div class="d-inline-block px-3 py-2 rounded-3"
                                     style="background: rgba(102, 126, 234, 0.15); border-left: 3px solid #00d2ff;">
                                    <span class="text-info fw-bold fs-5">@sub.Grade</span>
                                </div>
                            }
                        </div>

                        <!-- File Download -->
                        <div class="col-md-2 text-center">
                            @if (!string.IsNullOrEmpty(sub.FilePath))
                            {
                                <a href="@sub.FilePath" class="btn btn-sm fw-semibold py-2 px-4 rounded-pill"
                                   style="border: 2px solid #00eaff; color: #00eaff; background: transparent;">
                                    <i class="bi bi-download me-2"></i>Download
                                </a>
                            }
                            else
                            {
                                <span class="text-white-50 small">No file</span>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Table Footer -->
            <div class="card-footer border-0 py-4 px-4"
                 style="background: rgba(102, 126, 234, 0.05); border-radius: 0 0 1rem 1rem;">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small class="text-white-50">
                            <i class="bi bi-info-circle me-2"></i>
                            Showing @Model.Count submissions
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="d-inline-flex gap-2">
                          
                            <span class="badge bg-opacity-25 px-3 py-2" style="background-color: rgba(255, 107, 107, 0.2); color: #ff6b6b;">
                                <i class="bi bi-exclamation-circle me-1"></i>@Model.Count(s => s.Grade != null) Pending
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ensure smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Override any default body background */
    body {
        background-color: #1a1a2e;
    }

    /* Custom scrollbar for dark theme */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #1a1a2e;
    }

    ::-webkit-scrollbar-thumb {
        background: #667eea;
        border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #764ba2;
    }

    /* Responsive table adjustments */
    
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">