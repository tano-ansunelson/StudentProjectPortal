<div id="sidebar" class="sidebar bg-dark text-white vh-100 p-3"
     style="width:260px; position:fixed; top:0; left:0; padding:20px; z-index:1000;height">

    <div class="mb-4 text-center">
        <h5 class="fw-bold">👨‍🏫 Supervisor Panel</h5>
        <hr class="text-secondary" />
    </div>

    <ul class="nav flex-column gap-2">

        <li class="nav-item">
            <a asp-controller="Supervisor" asp-action="Index"
               class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString()=="Index" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>
        </li>

        <li class="nav-item">
            <a asp-controller="Supervisor" asp-action="Projects"
               class="nav-link text-white">
                <i class="bi bi-journal-text me-2"></i> My Projects
            </a>
        </li>

        <li class="nav-item">
            <a asp-controller="Supervisor" asp-action="Submissions"
               class="nav-link text-white">
                <i class="bi bi-inbox me-2"></i> Submissions
            </a>
        </li>

        <li class="nav-item">
            <a asp-controller="Supervisor" asp-action="Profile"
               class="nav-link text-white">
                <i class="bi bi-person-badge me-2"></i> Profile
            </a>
        </li>

        <li class="nav-item mt-4">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button class="btn btn-danger w-100">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </button>
            </form>
        </li>

    </ul>
</div>

