@model StudentProjectPortal.ViewModels.StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
   
}
<div class="main-content">
          <div class="py-5 mt-4" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); min-height: 100vh;">
            <div class="container-fluid px-4 px-lg-5">
                <partial name="_StudentSidebar" />
                <!-- PAGE HEADER -->
                <div class="mb-5">
                    <div class="d-flex align-items-center mb-3">
                        <div class="me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center shadow"
                                 style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-folder-fill text-white fs-3"></i>
                            </div>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-1 text-white">Available Projects</h2>
                            <p class="text-white-50 mb-0">Explore and select your research project</p>
                        </div>
                    </div>
                    <div class="border-bottom border-secondary opacity-25"></div>
                </div>

                <!-- PROJECT TABLE -->
                <div class="card border-0 rounded-4 shadow-lg mb-5"
                     style="background: linear-gradient(135deg, #1e1e30 0%, #2a2a40 100%);">

                    <!-- Table Header -->
                    <div class="card-header border-0 py-4 px-4"
                         style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
                                border-radius: 1rem 1rem 0 0;">
                        <div class="row text-white fw-bold">
                  
                            <div class="col-md-2">
                                <i class="bi bi-lightbulb-fill me-2"></i>Project Title
                            </div>
                            <div class="col-md-3">
                                <i class="bi bi-file-text me-2"></i>Description
                            </div>
                            <div class="col-md-2">
                                <i class="bi bi-person-circle me-2"></i>Lecturer
                            </div>
                              <div class="col-md-2">
                                <i class="bi bi-person-circle me-2"></i>Deadline
                            </div>

                            <div class="col-md-3 text-center">
                                <i class="bi bi-gear-fill me-2"></i>Actions
                            </div>
                        </div>
                    </div>

                    <!-- Table Body -->
                    <div class="card-body p-0">
                        @foreach (var project in Model.AvailableProject)
                        {
                  
                            <div class="row align-items-center py-4 px-4 border-bottom border-secondary border-opacity-25">
                                <!-- Project Title -->
                                <div class="col-md-2">
                                    <h6 class="fw-bold text-white mb-1">@project.Title</h6>
                                </div>

                                <!-- Description -->
                                <div class="col-md-3">
                                    <p class="text-white-50 mb-0 small" style="line-height: 1.6;">
                                        @(project.Description.Length > 120
                                                                    ? project.Description.Substring(0, 120) + "..."
                                                                    : project.Description)
                                    </p>
                                </div>

                                <!-- Lecturer -->
                                <div class="col-md-2">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-2"
                                             style="width: 35px; height: 35px; background-color: rgba(102, 126, 234, 0.2);">
                                            <span class="text-white fw-bold small">
                                                @project.Supervisor.FullName.Substring(0, 1)
                                            </span>
                                        </div>
                                        <div>
                                            <small class="text-white fw-semibold">@project.Supervisor.FullName</small>
                                        </div>
                                    </div>
                                </div>

                                <!--deadline-->
                        
                                 <div class="col-md-2">
                                    <h6 class="fw-bold text-white mb-1">@project.DateCreated.ToString("MMM-dd-yyy")</h6>
                                    <small class="text-white-50"> @project.DateCreated.ToString("dddd")</small>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-3">
                          
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (!string.IsNullOrEmpty(project.FilePath))
                                        {
                                            <!-- Download Button -->
                                            <a href="@project.FilePath"
                                               class="btn btn-sm fw-semibold py-2 px-3 rounded-pill"
                                               style="border: 2px solid #00eaff; color: #00eaff; background: transparent;">
                                                <i class="bi bi-download me-1"></i>Download
                                            </a>

                                        }
                                        else
                                        {
                                         <button class="btn btn-sm fw-semibold py-2 px-3 rounded-pill text-white"
                                                 style="border: 2px solid gray; color:gray background: transparent;"
                                                 disabled>
                                                <i class="bi bi-download me-1"></i>No File
                                            </button>


                                        }


                                        <!-- Submit Button -->
                                        <button class="btn btn-sm fw-semibold py-2 px-3 rounded-pill text-white"
                                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#submitModal"
                                                data-project-id="@project.Id">
                                            <i class="bi bi-send me-1"></i> Submit
                                        </button>
                                        <partial name="_SubmissionProject"/>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Table Footer -->
                    <div class="card-footer border-0 py-3 px-4 text-center"
                         style="background: rgba(102, 126, 234, 0.05); border-radius: 0 0 1rem 1rem;">
                        <small class="text-white-50">
                            <i class="bi bi-info-circle me-2"></i>
                            Showing @Model.AvailableProject.Count projects
                        </small>
                    </div>
                </div>

                <!-- MY ASSIGNMENT SECTION -->
                <partial name="_MyAssignment" model="Model.MySubmissions" />
            </div>
          </div>
</div>

<style>
    /* Ensure smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Override any default body background */
    body {
        background-color: #1a1a2e;
    }

    /* Custom scrollbar for dark theme */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #1a1a2e;
    }

    ::-webkit-scrollbar-thumb {
        background: #667eea;
        border-radius: 5px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #764ba2;
        }

    /* Responsive table adjustments */
   

</style>

<!-- Optional: Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">