@model StudentProjectPortal.Models.Supervisor
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Header with gradient -->
                <div class="card-header text-white text-center py-4 position-relative" 
                     style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="position-relative" style="z-index: 1;">
                        <!-- Avatar Circle -->
                        <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded-circle bg-white shadow" 
                             style="width: 100px; height: 100px;">
                            <span class="display-4 fw-bold" style="color: #667eea;">
                                @(Model.FullName?.Substring(0, 1).ToUpper() ?? "S")
                            </span>
                        </div>
                        <h3 class="mb-1 fw-bold">@Model.FullName</h3>
                        <p class="mb-0 opacity-90">
                            <i class="bi bi-briefcase me-2"></i>Supervisor
                        </p>
                    </div>
                    <!-- Decorative background pattern -->
                    <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" 
                         style="background-image: radial-gradient(circle, white 1px, transparent 1px); 
                                background-size: 20px 20px;">
                    </div>
                </div>

                <!-- Profile Information -->
                <div class="card-body p-4 p-md-5">
                    <h5 class="text-secondary mb-4 fw-semibold">
                        <i class="bi bi-person-badge me-2"></i>Profile Information
                    </h5>
                    
                    <div class="row g-4">
                        <!-- Full Name -->
                        <div class="col-12">
                            <div class="d-flex align-items-start p-3 rounded-3" 
                                 style="background-color: #f8f9fa;">
                                <div class="me-3 mt-1">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; background-color: #e3e7ff;">
                                        <i class="bi bi-person-fill" style="color: #667eea;"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block mb-1">Full Name</small>
                                    <h6 class="mb-0 fw-semibold">@Model.FullName</h6>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <div class="d-flex align-items-start p-3 rounded-3" 
                                 style="background-color: #f8f9fa;">
                                <div class="me-3 mt-1">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; background-color: #ffe3e7;">
                                        <i class="bi bi-envelope-fill" style="color: #dc3545;"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block mb-1">Email Address</small>
                                    <h6 class="mb-0 fw-semibold">
                                        <a href="mailto:@Model.Email" class="text-decoration-none text-dark">
                                            @Model.Email
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        </div>

                        <!-- Department -->
                        <div class="col-12">
                            <div class="d-flex align-items-start p-3 rounded-3" 
                                 style="background-color: #f8f9fa;">
                                <div class="me-3 mt-1">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; background-color: #e3f5e3;">
                                        <i class="bi bi-building" style="color: #28a745;"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block mb-1">Department</small>
                                    <h6 class="mb-0 fw-semibold">
                                         @(Model.Department?.Name.ToUpper() ?? "Not Assigned") 
                                       
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Footer -->
                <div class="card-footer bg-white border-0 p-4 text-center">
                    <a class="btn btn-lg px-5 py-3 fw-semibold shadow-sm" 
                       asp-action="EditProfile"
                       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                              color: white; 
                              border: none;
                              transition: transform 0.2s, box-shadow 0.2s;"
                       onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 20px rgba(102, 126, 234, 0.4)';"
                       onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='';">
                        <i class="bi bi-pencil-square me-2"></i>Edit Profile
                    </a>
                    <a class="btn btn-warning ms-2" 
                       asp-action="ChangePassword"
                       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                              color: white; 
                              border: none;
                              transition: transform 0.2s, box-shadow 0.2s;"
                       onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 20px rgba(102, 126, 234, 0.4)';"
                       onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='';">
                        <i class="bi bi-pencil-square me-2"></i>Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add Bootstrap Icons if not already included -->
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">